{
	"tasks": [
		{
			"type": "shell",
			"label": "gcc.exe build active file",
			"command": "C:/MinGW/bin/gcc.exe",
			"args": [
				"-std=c11",
				"-Wall",
				"-Wextra",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "C:\\MinGW\\bin"
			}
		},
		{
			"type": "shell",
			"label": "g++.exe build active file",
			"command": "C:/MinGW/bin/g++.exe",
			"args": [
				"-g",
				"-std=c++11",
				"-Wall",
				"-Wextra",
				"${file}",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "C:\\MinGW\\bin"
			}
		}
	],
	"version": "2.0.0"
}